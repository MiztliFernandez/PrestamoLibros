<Window x:Class="wpfProyectoLibros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfProyectoLibros"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="382" Background="DarkGray">
            <Label Name="etiqueta1" Margin="10" FontSize="30" >
                Username:
            </Label>
            <TextBox Name="usernameTextBox" VerticalAlignment="Center" Margin="10" FontSize="20" AcceptsReturn="False"></TextBox>
            <Label Margin="10" FontSize="30">Password</Label>
            <PasswordBox Name="passwordTextBox" VerticalAlignment="Center" Margin="10" FontSize="20"></PasswordBox>
            <Button Name="loginButton" Click="loginButton_Click" Margin="10" FontSize="30" Height="60" FontWeight="Bold" Background="Black"
                Foreground="White" Width="200">Entrar</Button>
            <Label Name="salidaLabel" FontSize="24"></Label>

        </StackPanel>
    </Grid>
</Window>
