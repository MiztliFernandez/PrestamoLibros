                    </MenuItem>
                    <MenuItem Header="_Terror" Click="MenuItem_Click" Height="100" FontFamily="Arial Black" FontSize="24" RenderTransformOrigin="0.801,0.474">
                        <MenuItem Header="_El Gato Negro" Click="MenuItem_Click_3" />
                        <MenuItem Header="_La Semilla del Diablo" Click="MenuItem_Click_4" />
                        <MenuItem Header="_Drácula" Click="MenuItem_Click_5" />
                        <Separator />

                    </MenuItem>
                    <MenuItem Header="_Aventura" Click="MenuItem_Click" Height="100" FontFamily="Arial Black" FontSize="24" RenderTransformOrigin="1.999,0.412">
                        <MenuItem Header="_La Isla del Tesoro" Click="MenuItem_Click_6" />
                        <MenuItem Header="_Robin Crusoe" Click="MenuItem_Click_7" />
                        <MenuItem Header="_Las Aventuras de Alexander" Click="MenuItem_Click_8" />
                        <Separator />

                    </MenuItem>
                </Menu>
            </DockPanel>
        </Grid>
   
</Window>
